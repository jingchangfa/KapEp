<?xml version="1.0" encoding="utf-8"?>
<resources>
    // 注意都加上 custom前置  防止冲突
    // 密码账号输入框
    <declare-styleable name="LoginEditTextView">
        <attr name="custom_image" format="reference"/>
        <attr name="custom_text" format="string|reference"/>
        <attr name="custom_placeholdText" format="string|reference"/>
        <attr name="custom_backColor" format="reference"/>
        <attr name="custom_textColor" format="reference"/>
        <attr name="custom_hintColor" format="reference"/>
        <attr name="custom_lineIsShow" format="boolean"/>

    </declare-styleable>
    // 登录下一步按钮
    <declare-styleable name="KapBigChangeButton">
        <attr name="custom_text_normal" format="reference"/>
        <attr name="custom_text_select" format="reference"/>
        <attr name="custom_text_disable" format="reference"/>

        <attr name="custom_backColor_normal" format="reference"/>
        <attr name="custom_backColor_select" format="reference"/>
        <attr name="custom_backColor_disable" format="reference"/>

        <attr name="custom_textColor_normal" format="reference"/>
        <attr name="custom_textColor_select" format="reference"/>
        <attr name="custom_textColor_disable" format="reference"/>
    </declare-styleable>
    // 设置密码等页面的北京alert
    <declare-styleable name="KapAlertBankShowView">
        <attr name="title_isShow" format="boolean"/>
        <attr name="title_text" format="reference"/>
        <attr name="button_isShow" format="boolean"/>
        <attr name="button_text" format="reference"/>
        <attr name="button_color" format="reference"/>
    </declare-styleable>
    // 带红点的button
    <declare-styleable name="KapImageRedDotsView">
        <attr name="imageview_image" format="reference"/>
    </declare-styleable>
    // 账户详情页 显示昵称，性别等的view
    <declare-styleable name="KapShowAccountDetailTextView">
        <attr name="AccountDetail_style" format="integer"/>
        <attr name="AccountDetail_content_sex" format="integer"/>// 0 女1 男   -1  未设置
        <attr name="AccountDetail_title_text" format="reference"/>
        <attr name="AccountDetail_content_textcolor" format="reference"/>
    </declare-styleable>
    // 查看 拒绝 同意的view
    <declare-styleable name="KapPendingButton">
        <attr name="pendingButton_backcolor" format="reference"/>
        <attr name="pendingButton_button_text" format="reference"/>
    </declare-styleable>

    // recycle的封装
    <declare-styleable name="InfiniteSlideView">
        <attr name="view_orientation" format="string"></attr>
    </declare-styleable>

    // 完善资料的
    <declare-styleable name="KapCompleteShowButton">
        <attr name="completeShowButton_image" format="reference"/>
    </declare-styleable>
    <declare-styleable name="ViewSexButton">
        <attr name="sexButton_imgae_n" format="reference"/>
        <attr name="sexButton_imgae_s" format="reference"/>
        <attr name="sexButton_stroke_color_n" format="reference"/>
        <attr name="sexButton_stroke_color_s" format="reference"/>
        <attr name="sexButton_fill_color_n" format="reference"/>
        <attr name="sexButton_fill_color_s" format="reference"/>
    </declare-styleable>
</resources>